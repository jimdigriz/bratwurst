/sbin/modprobe virtio_pci

/sbin/modprobe virtio_net

# no IPv6 on point to point link
# N.B. side steps QEMU multicast socket DAD problems too
/sbin/sysctl -q -w net.ipv6.conf.eth0.disable_ipv6=1

/sbin/modprobe atmtcp

# 9p shared mount
/sbin/modprobe 9pnet_virtio
mkdir /tmp/shared
mount -t 9p -o version=9p2000.L,trans=virtio shared /tmp/shared
