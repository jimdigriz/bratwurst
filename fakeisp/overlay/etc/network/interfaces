# interfaces(5) file used by ifup(8) and ifdown(8)
auto lo
iface lo inet loopback

auto eth0
iface eth0 inet dhcp

auto eth1
iface eth1 inet static
	address 172.21.0.0
	pointopoint 172.21.0.1

auto tun0
iface tun0 inet tunnel
	address 172.21.1.1
	netmask 255.255.255.0
	mode gre
	local 172.21.0.0
	endpoint 172.21.0.1
