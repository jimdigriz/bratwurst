# interfaces(5) file used by ifup(8) and ifdown(8)
auto lo
iface lo inet loopback
	up /sbin/ip addr add fd00:dead:beef:ffff:: dev lo
	up /sbin/ip addr add 172.20.1.0 dev lo
	up /sbin/ip addr add 172.20.2.0 dev lo

auto eth0
iface eth0 inet dhcp

auto eth1
iface eth1 inet static
	address 172.20.0.1
	netmask 255.255.255.0
	
	up /sbin/ip addr add 172.21.0.0 peer 172.21.0.1 dev eth1
